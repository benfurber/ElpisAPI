type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  published: Boolean! @default(value: false)
  title: String
  content: String!
  imagePath: String
  author: User!
  comments: [Comment]!
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String!
  avatarPath: String
  posts: [Post!]!
  onboarded: Boolean! @default(value: false)
  notifications: [Notification]!
}

type Comment {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  author: User!
  content: String!
  post: Post!
  replies: [Reply]!
}

type Reply {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  author: User!
  content: String!
  comment: Comment!
}

type Notification {
  id: ID! @id
  user: User!
  createdAt: DateTime! @createdAt
  post: Post!
  reply: Reply
  newNotification: Boolean! @default(value: true)
  type: String!
}
